{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "types": [
      "node",
      "jest",
      "@nuxt/content",
      "@nuxt/types"
    ]
  },
  "include": ["test", "src"],
  "exclude": [
    "api",
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
